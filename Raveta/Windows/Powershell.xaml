<Window x:Class="Raveta.Powershell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raveta"
        mc:Ignorable="d"
        Title="Powershell" Height="450" Width="800" WindowStyle="None" Loaded="Window_Loaded" Background="#21587584">
    <Grid Height="434" VerticalAlignment="Top" Margin="0,16,0,0">
        <StackPanel Margin="0,-1,0,412" MouseDown="StackPanel_MouseDown">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8AAFCC" Offset="0.004"/>
                    <GradientStop Color="#FF0078D8" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
        </StackPanel>

    </Grid>
</Window>
